<!--Con esto estamos indicando que dentro de este html vamos a trabajar con un modelo de tipo lista-->
@model List<ContactoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Lista Contacto
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-success">
            Crear Nuevo
        </a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Telefono</th>
                    <th>Correo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody><!--Dentro de el tbody se inserta una logica de razor, esto es: agregar codigo de C# dentro de html -->
                @foreach(var item in Model)
                {
                 <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Telefono</td>
                    <td>@item.Correo</td>
                    <td>
                        <a asp-action="Editar" asp-controller="Mantenedor" class="btn btn-primary btn-sm" asp-route-Idcontacto="@item.IdContacto">
                            Editar
                        </a>
                        <a asp-action="Eliminar" asp-controller="Mantenedor" class="btn btn-danger btn-sm" asp-route-Idcontacto="@item.IdContacto">
                            Elimnar
                        </a>
                    </td>
                 </tr>
                 }
            </tbody>
        </table>
    </div>
</div>

